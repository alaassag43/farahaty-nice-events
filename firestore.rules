rules_version = '2'
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. تعريف وظيفة للتحقق من أن المستخدم هو "Admin"
    function isAdmin() {
      // نفترض أنك تخزن دور المستخدم في مجموعة users
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // 2. القواعد الأساسية للمستخدمين (Authentication)
    match /users/{userId} {
      // السماح للمستخدم فقط بالقراءة والكتابة في ملفه الشخصي
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      // السماح بإنشاء ملف مستخدم جديد إذا لم يكن موجوداً
      allow create: if request.auth != null;
    }

    // 3. قواعد التفاعل (Admin vs User) - مثال على الطلبات
    match /requests/{requestId} {
      // المستخدم العادي يمكنه فقط إنشاء الطلب وقراءة طلبه الخاص
      allow create: if request.auth != null;
      allow read: if request.auth.uid == resource.data.userId || isAdmin(); // يمكن للمستخدم قراءة طلبه الخاص أو إذا كان الأدمن
      
      // الأدمن فقط يمكنه تحديث أو حذف الطلبات
      allow update, delete: if isAdmin();
    }

    // 4. حماية باقي المستندات (منع الوصول العشوائي)
    match /{document=**} {
      allow read, write: if false; // يمنع أي وصول لم يتم تعريفه أعلاه
    }
  }
}